@model IEnumerable<Presentación.Models.CNomina>

@{
    ViewBag.Title = "Listado de Nóminas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Listado de Nóminas</h2>

<p>
    <a class="btn btn-success" title="Crear" href="@Url.Action("Create")"><i class="glyphicon glyphicon-plus"></i> Crear nómina</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Año)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Mes)
        </th>
        <th>
            Monto Total
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.ID)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Año)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Mes)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.montoTotal)
    </td>
    <td>
        @Html.ActionLink(" ", "Edit", new { id = item.ID }, new { @class = "btn btn-info glyphicon glyphicon-edit" })
        @Html.ActionLink(" ", "Delete", new { id = item.ID }, new { @class = "btn btn-danger glyphicon glyphicon-trash" })
    </td>
</tr>
    }

</table>
@using (Html.BeginForm("Details", "Nominas", FormMethod.Get))
{
    <input type="text" class="form-control" name="nombre" placeholder="Buscar" />
}
